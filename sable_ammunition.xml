			<set name="rarity">rare</set>
			<set name="stackable">true</set>
			<!-- <set name="enhancement">1</set> -->
		</setters>
	</element>	
	<element name="Rope Bolt" type="Magic Item" source="JCDM" id="JCDM_Ammo_05">		
		<description>
			<p>This crossbow bolt is constructed from a thick shaft of dark, hard wood.  The bolt has 100ft of thin elven rope attached.</p>
            <p>The range of this Bolt is reduced by 50% due to the added weight of the Bolt.</p>
		</description>
		<setters>
			<set name="category">Ammunition</set>
			<set name="cost" currency="gp">100</set>
