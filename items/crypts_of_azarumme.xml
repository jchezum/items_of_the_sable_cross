	<element name="Wand of the Grammarian" type="Magic Item" source="JCDM" id="JCDM_coa_001">
		<description>
			<p>This wand enables its user to change one letter of any spell they cast. The DM then determines what the new spell does.  Has 4 charges and regains 1d4 each night.</p>
		</description>
		<setters>
			<set name="keywords">Wands</set>
			<set name="cost" currency="gp">5751</set>
			<set name="weight" lb="1">1 lb.</set>            
			<set name="slot">onehand</set>            
			<set name="rarity">Rare</set>
			<set name="type">Wand</set>
			<set name="attunement">false</set>
		</setters>		
	</element>	

