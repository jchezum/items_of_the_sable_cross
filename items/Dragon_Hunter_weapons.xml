	<element name="Dragon Hunter Longsword" type="Magic Item" source="JCDM" id="JCDM_DH_Weapon_01">
		<description>
			<p>This longsword is made of an unusual blackened metal with a faint, poison-green iridescence. </p>
			<p class="indent">This weapon gives a +1 to hit and attack.  On hit, deals an additional 1d8 acid damage. </p>
		</description>
		<setters>
			<set name="keywords">longsword</set>
			<set name="category">Magic Weapons</set>
			<set name="cost" currency="gp">1000</set>
			<set name="type" addition="longsword">Weapon</set>
			<set name="rarity">Rare</set>
			<set name="weapon">Longsword</set>
			<set name="attunement">false</set>
			<set name="enhancement">1</set>
		</setters>		
	</element>	

